@model IEnumerable<TshirtCo_NN.Models.Design>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DesignName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GarmentColourForPrint)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DesignName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GarmentColourForPrint)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DesignId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DesignId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DesignId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
